<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-6 offset-3">

        <h2 class="text-center">Login</h2>

        <form action="/login" method="POST" class="my-3 needs-validation" novalidate>
            <div class="col">
                <div class="mb-3">
                    <label for="usename" class="form-label">Usename</label>
                    <input class="form-control" id="username" type="text" name="username" placeholder="Enter your username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <input class="form-control" id="password" type="password" name="password" placeholder="Enter your password" required>
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility()">
                            <i class="fa-regular fa-eye-slash" id="togglePasswordIcon"></i>
                        </button>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <button class="btn btn-success">Login</button>
            </div>
        </form>
    </div>
</div>